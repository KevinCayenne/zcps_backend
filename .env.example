# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL production: postgresql://user:password@localhost:5432/dbname

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@example.com
# For development (console output):
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production SMTP:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# JWT Configuration (optional, can override defaults)
JWT_ACCESS_TOKEN_MINUTES=15
JWT_REFRESH_TOKEN_DAYS=7

# Djoser Configuration
SEND_ACTIVATION_EMAIL=True

# Password Management Configuration
# Password reset token expiration time in seconds (default: 86400 = 24 hours)
PASSWORD_RESET_TIMEOUT=86400

# Frontend URL for password reset and email verification links
FRONTEND_URL=http://localhost:3000

# Email verification enforcement (default: False)
# When True, certain actions may require verified email
REQUIRE_EMAIL_VERIFICATION=False

# JWT token blacklisting on password change (default: False)
# When True, all JWT tokens are blacklisted when user changes password
BLACKLIST_TOKENS_ON_PASSWORD_CHANGE=False

# Email 2FA enforcement (placeholder for future roadmap item 7)
# Reserved for future multi-factor authentication implementation
EMAIL_2FA_ENFORCEMENT=False

# Production Security (only for production environment)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
