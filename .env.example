# Django Settings
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL production: postgresql://user:password@localhost:5432/dbname

# Email Configuration
DEFAULT_FROM_EMAIL=noreply@example.com
# For development (console output):
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# For production SMTP:
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@example.com
# EMAIL_HOST_PASSWORD=your-email-password

# JWT Configuration (optional, can override defaults)
JWT_ACCESS_TOKEN_MINUTES=15
JWT_REFRESH_TOKEN_DAYS=7

# Djoser Configuration
SEND_ACTIVATION_EMAIL=True

# Password Management Configuration
# Password reset token expiration time in seconds (default: 86400 = 24 hours)
PASSWORD_RESET_TIMEOUT=86400

# Frontend URL for password reset and email verification links
# Can include protocol (http:// or https://) or just domain
# Examples: http://localhost:3000, https://app.example.com, or localhost:3000
FRONTEND_URL=http://localhost:3000

# JWT token blacklisting on password change (default: False)
# When True, all JWT tokens are blacklisted when user changes password
BLACKLIST_TOKENS_ON_PASSWORD_CHANGE=False

# Two-Factor Authentication Configuration
# All 2FA settings are now managed via the database-based TwoFactorSettings model.
# Configure 2FA settings at: /admin/users/twofactorsettings/
# Available settings:
#   - enforce_2fa_for_all_users (default: False)
#   - default_2fa_method (default: EMAIL)
#   - code_expiration_seconds (default: 600 = 10 minutes)
#   - max_failed_attempts (default: 5)
#   - temporary_token_lifetime_minutes (default: 10)

# Google OAuth Configuration
# Obtain these credentials from Google Cloud Console:
# 1. Go to https://console.cloud.google.com/
# 2. Create a new project or select existing project
# 3. Enable Google+ API (or Google Identity Services)
# 4. Go to "Credentials" and create "OAuth 2.0 Client ID"
# 5. Add authorized redirect URI: http://localhost:8000/auth/google/callback/ (dev)
#    or https://api.yourdomain.com/auth/google/callback/ (production)
GOOGLE_OAUTH_CLIENT_ID=your-google-client-id-here
GOOGLE_OAUTH_CLIENT_SECRET=your-google-client-secret-here

# OAuth Redirect URLs
# Success redirect URL (frontend callback page with JWT tokens as query params)
# For development with the included test page, run a local HTTP server:
# cd users/static/test_pages && python -m http.server 3000
# Then use: GOOGLE_OAUTH_SUCCESS_REDIRECT_URL=http://localhost:3000/oauth_test.html
# For production, use your deployed frontend URL:
GOOGLE_OAUTH_SUCCESS_REDIRECT_URL=http://localhost:3000/auth/callback

# Error redirect URL (frontend error page with error details as query params)
# For development with the included test page:
# GOOGLE_OAUTH_ERROR_REDIRECT_URL=http://localhost:3000/oauth_test.html
# For production, use your deployed frontend URL:
GOOGLE_OAUTH_ERROR_REDIRECT_URL=http://localhost:3000/auth/error

# Production Security (only for production environment)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
